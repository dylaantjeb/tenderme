generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GenerationJob {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status   JobStatus
  progress Int       @default(0)

  title       String
  tenderTitle String
  authority   String

  payload     Json?
  payloadJson Json?

  // ⬇️ DEZE REGEL TOEVOEGEN
  artifacts GenerationArtifact[]
}

model GenerationArtifact {
  id        String        @id @default(cuid())
  jobId     String
  job       GenerationJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  name      String // bv. "EMVI.md" of "bundle.zip"
  mimeType  String
  url       String // downloadlocatie
  createdAt DateTime      @default(now())
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
